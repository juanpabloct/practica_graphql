generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Productos {
  idProducto Int      @id @unique @default(autoincrement())
  name       String
  precio     Int
  Bodega     Bodega[]
}

model Tienda {
  idTienda Int      @id @unique @default(autoincrement())
  name     String
  Bodega   Bodega[]
}

model Bodega {
  idBodega   Int       @id @unique @default(autoincrement())
  fkProducto Int
  fkTienda   Int
  producto   Productos @relation(fields: [fkProducto], references: [idProducto])
  tienda     Tienda    @relation(fields: [fkTienda], references: [idTienda])
}

model User {
  idUser   Int    @id @default(autoincrement())
  email    String @unique
  password String

  @@unique([email, idUser])
}

model Factura {
  compraId Int    @id @default(autoincrement())
  name     String
}
