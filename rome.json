{
  "formatter": {
    "enabled": true,
    "indentStyle": "tab",
    "lineWidth": 120,
    "ignore":["./src/@generated"]
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "correctness":{
        "recommended": true
      },
      "performance":{
        "recommended": true
      }
    },
    "ignore":["./src/@generated"]
  },
  "javascript": {
    "formatter": {
      "semicolons": "asNeeded",
      "quoteStyle": "single",
      "trailingComma": "all"
    }
  },
  "organizeImports": {
    "enabled": true
  }
}
